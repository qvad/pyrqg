{
  "database": {
    "type": "postgresql",
    "connection": "postgresql://postgres:password@localhost:5433/postgres"
  },
  "ddl": {
    "enabled": true,
    "search_path": "pyrqg, public",
    "commands": [
      "CREATE SCHEMA IF NOT EXISTS pyrqg",
      "SET search_path TO pyrqg, public"
    ],
    "files": ["pyrqg/schemas/postgres_schema.sql"]
  },
  "dml": {
    "enabled": true,
    "grammars": [
      "dml_yugabyte",
      "yugabyte_transactions",
      "yugabyte_subquery",
      "yugabyte_outer_join"
    ],
    "batch_size": 50
  },
  "time_limit_hours": 0,
  "query_limit": 1000,
  "verbose": true,
  "save_report": true
}